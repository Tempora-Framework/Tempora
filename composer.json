{
	"name": "tempora-framework/tempora",
	"description": "A PHP MVC framework",
	"keywords": [
		"php",
		"mvc",
		"framework"
	],
	"license": "CC-BY-4.0",
	"authors": [
		{
			"name": "Erick Paoletti",
			"email": "erick.paoletti@gmail.com",
			"homepage": "https://erickpaoletti.fr",
			"role": "CEO"
		}
	],
	"homepage": "https://github.com/tempora-framework/tempora",

	"require": {
		"php": "^8.3",
		"vlucas/phpdotenv": "^5.6",
		"phpmailer/phpmailer": "^6.9",
		"firebase/php-jwt": "^6.11",
		"matthiasmullie/minify": "^1.3"
	},

	"require-dev": {
		"phpunit/phpunit": "^10.5",
		"friendsofphp/php-cs-fixer": "^3.89",
		"gd-75/php-cs-fixer-enforce-double-quotes": "^1.1"
	},

	"autoload": {
		"psr-4": {
			"Tempora\\": "src/"
		}
	},

	"scripts": {
		"test": "phpunit --configuration phpunit.xml --do-not-cache-result --colors=always --display-deprecations src/Tests",
		"fix": "php-cs-fixer fix src/ --config=.php-cs-fixer.php --using-cache=no --show-progress=dots"
	}
}
